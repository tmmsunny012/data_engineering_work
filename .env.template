# PostgreSQL Configuration
POSTGRES_USER=dataeng
POSTGRES_PASSWORD=your_secure_password_here          # ← CHANGE THIS
POSTGRES_DB=business_db
POSTGRES_PORT=5432

# Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW_GID=0
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Airflow Security Keys
# Generate Fernet key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW__CORE__FERNET_KEY=GENERATE_NEW_KEY_HERE       # ← CHANGE THIS

# Generate secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
AIRFLOW__WEBSERVER__SECRET_KEY=GENERATE_NEW_KEY_HERE  # ← CHANGE THIS

# Airflow Settings
AIRFLOW__CORE__LOAD_EXAMPLES=False

# Airflow Admin User (for initial setup)
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=your_airflow_password_here     # ← CHANGE THIS

# DBT Configuration
DBT_PROFILES_DIR=/dbt
DBT_PROJECT_DIR=/dbt

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=your_email@example.com          # ← CHANGE THIS
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password_here   # ← CHANGE THIS
PGADMIN_PORT=5050

# Project Configuration
PROJECT_NAME=business_performance_analytics
ENVIRONMENT=local

